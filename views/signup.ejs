<body ng-app="sensorApp" ng-controller="mainPageCtrl">
<div id="page-wrapper">

				<!-- Header -->
					<header id="header">
						<h1>Estimation Software</h1>
						<nav id="nav">
							<ul>
								<li class="special">
									<a href="#menu" class="menuToggle"><span>Menu</span></a>
									<div id="menu" style="background-color: black">
										<ul>
											<li><a href="" ng-click="index()">Home</a></li>
											<li><a href="" ng-click="login();">Login</a></li>
										</ul>
									</div>
								</li>
							</ul>
						</nav>
					</header>
<section class="wrapper style5">
							<div class="inner">
									<h4>Sign Up</h4> 
									<form>
										<div class="row uniform">
											<div class="6u 12u$(xsmall)">
												<input type="text" name="firstname" id="firstname" value="" placeholder="First Name" ng-model="fname"/>
											</div>
											<div class="6u$ 12u$(xsmall)">
												<input type="text" name="lastname" id="lastname" value="" placeholder="Last Name" ng-model="lname" />
											</div>
											<div class="6u 12u$(xsmall)">
												<input type="password" name="password" id="password" value="" placeholder="Password" ng-model="pswrd" />
											</div>
											<div class="6u$ 12u$(xsmall)">
												<input type="email" name="email" id="email" value="" placeholder="Email" ng-model="email"/>
											</div>
											<div class="6u 12u$(xsmall)">
												<input type="text" name="phone" id="phone" value="" placeholder="Phone" ng-model="userid"/>
											</div>
											<div class="6u$ 12u$(xsmall)">
												<input type="text" name="address" id="address" value="" placeholder="Address" ng-model="address"/>
											</div>
											<div class="6u 12u$(xsmall)">
												<p style="color:red">(Phone number will be used as user ID for login) </p>
											</div>	
											<div class="12u$">
												<ul class="actions">
													<li><input type="submit" value="Sign Up" class="special" ng-click="addUser()"/></li>
													<li><input type="reset" value="Reset" /></li>
												</ul>
											</div>
											
											<div class="alert alert-success col-md-12" id="success-alert1" style="display: none ">
											<center> <strong> Successful SIgn up.Please login to proceed</strong></center>
											</div>
											
											<div class="alert alert-success col-md-12" id="failure-alert" style="display: none ">
											<center> <strong> Email ID already exists. Please enter a correct Email. </strong></center>
											</div>

										</div>
									</form>
								</section>
								</article>
								</div>
</body>
</html>